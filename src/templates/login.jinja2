{% extends "layout.jinja2" %}

{% block content %}
    <main>
      <div class="container col-xl-10 col-xxl-8 px-4 py-2">
        <img class="d-block mx-auto" src="../static/img/logo.jpg" alt="" width="454" height="356">
        <div class="row align-items-center g-lg-2">
          <div class="col-md-10 mx-auto col-lg-5">
            {% for message in get_flashed_messages() %}
            <div class="alert alert-warning">
              {{ message }}
            </div>
            {% endfor %}
            <form class="p-4 p-md-2" action="/login" method="POST">
              {{ form.csrf_token }}
              <div class="form-floating mb-3">
                {{ form.email(type='email', class='form-control', placeholder='foo@domain.tld') }}
                {{ form.email.label(for='floatingInput') }}
                {% if form.email.errors %}
                  <ul class="errors">
                    {% for error in form.email.errors %}
                      <li>{{ error }}</li>{% endfor %}
                  </ul>
                {% endif %}
              </div>
              <div class="form-floating mb-3">
                {{ form.password(class='form-control', placeholder='Password') }}
                {{ form.password.label(for='floatingPassword') }}
                {% if form.password.errors %}
                  <ul class="errors">
                    {% for error in form.password.errors %}
                      <li>{{ error }}</li>{% endfor %}
                  </ul>
                {% endif %}
              </div>
              <div class="checkbox mb-3">
                <label>
                  {{ form.remember }} Remember me
                </label>
              </div>
              {{ form.submit(class='w-100 btn btn-lg btn-primary') }}
            </form>
          </div>
        </div>
      </div>
    </main>
{% endblock %}