{% extends "_layout.jinja2" %}

{% block content %}
    <main>
      <div class="container col-xl-10 col-xxl-8 px-4 py-2">
        <img class="d-block mx-auto" src="{{ url_for('static', filename='dist/img/logo.jpg') }}" alt="" width="454" height="356">
        <div class="row align-items-center g-lg-2">
          <div class="col-md-10 mx-auto col-lg-5">
            {{ render_messages(dismissible=true) }}
            <form class="p-4 p-md-2" action="/login" method="POST">
              {{ form.csrf_token }}
              <div class="form-floating mb-3">
              {% if form.email.errors %}
                {{ form.email(type='email', class='form-control is-invalid') }}
                  <div class="invalid-feedback d-block">
                    {% for error in form.email.errors %}
                      {{ error }}
                    {% endfor %}
                  </div>
              {% else %}
                {{ form.email(type='email', class='form-control') }}
              {% endif %}
              {{ form.email.label(for='floatingInput') }}
              </div>
              <div class="form-floating mb-3">
                {{ form.password(class='form-control') }}
                {{ form.password.label(for='floatingPassword') }}
              </div>
              {{ render_field(form.remember) }}
              {{ render_field(form.submit, button_size='lg', class='w-100') }}
            </form>
          </div>
        </div>
      </div>
    </main>
{% endblock %}